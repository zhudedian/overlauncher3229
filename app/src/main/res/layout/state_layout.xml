<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="150dp"
    android:layout_alignParentRight="true">


    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:format12Hour="aa"
        android:format24Hour=""
        android:paddingBottom="8dp"
        android:textColor="#fff"
        android:id="@+id/text_clock"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="52dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:format12Hour="hh:mm"
        android:format24Hour="HH:mm"
        android:id="@+id/textClock"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/text_clock"
        app:layout_constraintRight_toLeftOf="@+id/text_clock" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock2"
        android:layout_marginTop="2dp"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@+id/text_clock"
        app:layout_constraintRight_toRightOf="@+id/text_clock"
        android:textSize="15sp"
        android:scaleType="center"
        android:format12Hour="E.yyyy-MM-dd"
        android:format24Hour="E.yyyy-MM-dd"/>

    <ImageView
        style="@style/NetState"
        app:srcCompat="@drawable/ic_wifi_white_36dp"
        android:id="@+id/state_wifi"
        app:layout_constraintBottom_toBottomOf="@+id/textClock"
        app:layout_constraintRight_toLeftOf="@+id/textClock"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/textClock" />

    <ImageView
        style="@style/NetState"
        app:srcCompat="@drawable/ic_bluetooth_white_36dp"
        android:id="@+id/state_bluetooth"
        app:layout_constraintRight_toLeftOf="@+id/state_wifi"
        app:layout_constraintTop_toTopOf="@+id/textClock"
        app:layout_constraintBottom_toBottomOf="@+id/textClock" />

    <ImageView
        style="@style/NetState"
        app:srcCompat="@drawable/ic_usb_white_36dp"
        android:id="@+id/state_usb"
        app:layout_constraintTop_toTopOf="@+id/textClock"
        app:layout_constraintBottom_toBottomOf="@+id/textClock"
        app:layout_constraintRight_toLeftOf="@+id/state_bluetooth" />
    <ImageView
        android:id="@+id/sd_card"
        style="@style/NetState"
        android:src="@drawable/ic_sd_card_white_36dp"
        app:layout_constraintTop_toTopOf="@+id/textClock"
        app:layout_constraintBottom_toBottomOf="@+id/textClock"
        app:layout_constraintRight_toLeftOf="@+id/state_usb"/>
    <ImageView
        android:id="@+id/file_ic"
        style="@style/NetState"
        android:src="@drawable/bgrockable"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="@+id/textClock"
        app:layout_constraintBottom_toBottomOf="@+id/textClock"
        app:layout_constraintRight_toLeftOf="@+id/sd_card"/>
    <ImageView
        android:id="@+id/setting_ic"
        style="@style/NetState"
        android:src="@drawable/launchsetting"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="@+id/textClock"
        app:layout_constraintBottom_toBottomOf="@+id/textClock"
        app:layout_constraintRight_toLeftOf="@+id/file_ic"/>
</android.support.constraint.ConstraintLayout>