<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_app_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_launcher"
    tools:showIn="@layout/activity_applist">

    <TextView
        android:id="@+id/title_apps"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/h_50"
        android:layout_marginTop="@dimen/h_30"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:focusable="false"
        android:textSize="35sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/totalsize"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/h_25"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:layout_marginTop="@dimen/h_60"
        android:layout_marginRight="@dimen/h_189"
        android:textColor="#FFFFFF" />
    <ProgressBar
        android:id="@+id/size_pro"
        android:layout_width="204dp"
        android:layout_height="12dp"
        android:layout_below="@+id/totalsize"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/h_100"
        android:focusable="false"
        android:progress="50"
        style="@android:style/Widget.ProgressBar.Horizontal" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px4"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:layout_below="@+id/size_pro"
        android:layout_marginTop="@dimen/px20"
        android:background="#bba6a6a6"/>
    <GridView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px630"
        android:layout_marginTop="@dimen/h_170"
        android:layout_marginLeft="@dimen/h_80"
        android:layout_marginRight="@dimen/h_80"
        android:layout_marginBottom="@dimen/h_8"
        android:numColumns="5"
        android:focusable="true"
        android:scrollbars="none"
        android:paddingLeft="30dp"
        android:listSelector="#00000000"
        android:paddingTop="50dp"
        android:paddingRight="30dp"
        android:paddingBottom="60dp"/>
    <com.ider.overlauncher.applist.FlyImageView
        android:id="@+id/mainUpView1"
        android:layout_marginTop="201dp"
        android:layout_marginLeft="88dp"
        android:layout_width="245dp"
        android:focusable="false"
        android:layout_height="193dp"
        android:visibility="invisible"
        android:background="@drawable/focusiv" />
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:focusable="false"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/px100"
        android:layout_marginLeft="@dimen/px50"
        android:textColor="@color/white_90"
        android:textSize="@dimen/px30"
        android:text="@string/appstip"/>

</RelativeLayout>