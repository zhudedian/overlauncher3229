<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px150"
    android:layout_height="@dimen/px150"
    android:background="@mipmap/item_back"
    >
    <View
        android:id="@+id/item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />
    <ImageView
        android:id="@+id/tiv_icon"
        android:layout_width="@dimen/px120"
        android:layout_height="@dimen/px120"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px20"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px4"
        android:maxLength="5"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textSize="@dimen/px36"/>


</RelativeLayout>